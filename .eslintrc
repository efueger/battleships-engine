{
  "extends": "eslint:recommended",
  "env": {
	"browser": true,
	"node": true,
	"es6": true,
	"mocha": true
  },
  "parserOptions": {
	"sourceType": "module"
  },
  "rules": {
	"semi": 2,
	"quotes": [
	  2,
	  "single"
	],
	"strict": [
	  0,
	  "global"
	],
	"no-native-reassign": 2,
	"no-array-constructor": 2
  },
  "globals": {
	"expect": true,
	"sinon": true
  }
}
